def triangle_type(a, b, c):
    """
    Определяет тип треугольника по трём сторонам.
    
    Параметры:
    a, b, c (float): стороны треугольника
    
    Возвращает:
    str: тип треугольника
    """
    
    # Проверка на существование треугольника
    if a <= 0 or b <= 0 or c <= 0:
        return "Не треугольник: стороны должны быть положительными"
    
    # Неравенство треугольника
    if a + b <= c or a + c <= b or b + c <= a:
        return "Не треугольник: не выполняется неравенство треугольника"
    
    # Сортируем стороны для удобства
    sides = sorted([a, b, c])
    a, b, c = sides[0], sides[1], sides[2]
    
    # Определение типа треугольника по сторонам
    if a == b == c:
        type_by_sides = "равносторонний"
    elif a == b or b == c or a == c:
        type_by_sides = "равнобедренный"
    else:
        type_by_sides = "разносторонний"
    
    # Определение типа по углам (теорема Пифагора)
    epsilon = 1e-10  # точность для сравнения с плавающей точкой
    
    # Квадраты сторон
    a2 = a * a
    b2 = b * b
    c2 = c * c
    
    if abs(a2 + b2 - c2) < epsilon:
        type_by_angles = "прямоугольный"
    elif a2 + b2 > c2:
        type_by_angles = "остроугольный"
    else:
        type_by_angles = "тупоугольный"
    
    # Комбинированный результат
    if type_by_sides == "равносторонний":
        return "Треугольник равносторонний и остроугольный"
    else:
        return f"Треугольник {type_by_sides} и {type_by_angles}"


def main():
    """Основная функция для ввода данных и вывода результата"""
    print("Определение типа треугольника по трём сторонам")
    print("=" * 50)
    
    try:
        # Ввод сторон с проверкой
        a = float(input("Введите длину первой стороны: "))
        b = float(input("Введите длину второй стороны: "))
        c = float(input("Введите длину третьей стороны: "))
        
        # Определение типа треугольника
        result = triangle_type(a, b, c)
        print(f"\nРезультат: {result}")
        
    except ValueError:
        print("Ошибка: пожалуйста, введите числовые значения для сторон")


if __name__ == "__main__":
    main()